{
  "name": "summer-mcp",
  "version": "1.0.0",
  "description": "Summer MCP - Browser Monitoring and Control Platform",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently \"pnpm -r --filter=!@summer-mcp/aggregator-server dev\" \"pnpm --filter @summer-mcp/aggregator-server dev\"",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx}\" --fix",
    "type-check": "pnpm -r exec -- tsc --noEmit"
  },
  "keywords": [
    "browser",
    "monitoring",
    "extension",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "concurrently": "9.1.2",
    "eslint": "^9.22.0"
  }
}
